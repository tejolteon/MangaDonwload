<Window x:Class="MDR.Viewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDR"
        mc:Ignorable="d"
        Title="Viewer" Height="450" Width="800">
    <Grid x:Name="GridMain" Background="#FFA6A6A6" MouseMove="GridMain_MouseMove">
        <Grid x:Name="GridImage" MouseWheel="GridImage_MouseWheel" MouseLeftButtonDown="GridImage_MouseLeftButtonDown" MouseLeftButtonUp="GridImage_MouseLeftButtonUp" MouseMove="GridImage_MouseMove" SizeChanged="GridImage_SizeChanged">
            <Image x:Name="Image1" />
        </Grid>
    </Grid>
</Window>
